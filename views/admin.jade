extends layout

block append head
  link(rel='stylesheet', href='/css/style.css')
  script(src='/js/admin.js')

block append body
  div(data-dojo-type='dijit/layout/BorderContainer', data-dojo-props="design:'sidebar', gutters:true, liveSplitters:true", style='width:100%;height:100%')
    div(data-dojo-type='dijit/layout/ContentPane', data-dojo-props="region:'top', splitter: false")
      div(id='mainMenu', data-dojo-type='dijit/MenuBar') 
        div(id='mainMenuNewDirectory', data-dojo-type='dijit/MenuBarItem', disabled=true) New directory 
        div(id='mainMenuDelete', data-dojo-type='dijit/MenuBarItem', disabled=true) Delete
    div(data-dojo-type='dijit/layout/ContentPane', data-dojo-props="region:'leading', splitter:true", style='width:250px')
      div#tree
    div(data-dojo-type='dijit/layout/ContentPane', data-dojo-props="region:'center', splitter:false")
      form(method='post', action='/upload', enctype='multipart/form-data')
        div
          input(type='file', name='photoszip', multiple='multiple')
          input(data-dojo-type='dijit/form/Button',data-dojo-props="iconClass:'dijitEditorIcon dijitEditorIconCut', showLabel: true", type='submit', label='submit', value='go')
